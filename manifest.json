{
    "manifest_version": 1,
    "name": "AutoScroll",
    "version": "1.0.0",

    "description": "This extension adds autoscrolling to firefox with variable speed setting",

    "browser_action": {
        "default_icon": "icons/scroll-32.png",
        "default_title": "autoScroll",
        "default popup": "popup/mainPopup.html",
        "browser_style": true
    },


    "icons": {
        "16": "icons/scroll-16.png",
        "32": "icons/scroll-32.png",
        "48": "icons/scroll-48.png"
    },
    
    "content_scripts": [
        {
            "js": ["popup/autoScroll.js"]
        }
    ]
}
